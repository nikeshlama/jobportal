<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Activity.HireActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/GoProfileButton"
                android:background="@drawable/ic_baseline_arrow_back_24"
                android:layout_alignParentLeft="true"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <Button
                android:text="Submit"
                android:textColor="#03A9F4"
                android:id="@+id/btnSubmit"
                android:textStyle="bold"
                android:textSize="18dp"
                android:background="@color/white"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="40dp"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="22dp"
        android:padding="15dp"
        android:text="What is your total budget?"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etBudget"
            android:layout_margin="15dp"
            android:background="@drawable/search_bar"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="22dp"
        android:padding="15dp"

        android:text="What you need to be done"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etDescribe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:layout_margin="15dp"
        android:hint="Introduce and describe your project, deadline and deliverables"

        android:inputType="textMultiLine" />


</LinearLayout>